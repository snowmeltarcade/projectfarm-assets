{
  "parameters": {
    "text": "Default Text",
    "color": "css:color",
    "text-color": "css:text-color",
    "font": "css:font",
    "texturePath": "css:texture",
    "cursorTexturePath": "css:texture1",
    "onload": "{ClientUI}/custom_controls/textbox/textbox.js",
    "onshutdown": "",
    "onclick": "",
    "onmouseenter": "",
    "onmouseleave": "",
    "onkeypress": "",
    "onkeypress_enter": "",
    "characterOverride": "",
    "useMarkdown": "true",
    "allowNewLines": "true"
  },
  "meta": {
    "textControl": "labelText",
    "type": "textbox"
  },
  "controls": [
    {
      "type": "texture",
      "x": 0,
      "y": 0,
      "w": 100,
      "h": 100,
      "texturePath": "##texturePath##",
      "controls": [
        {
          "type": "label",
          "id": "labelText",
          "x": 0,
          "y": 0,
          "w": 100,
          "h": 100,
          "text": "##text##",
          "font": "##font##",
          "color": "##color##",
          "text-color": "##text-color##",
          "onload": "##onload##",
          "onshutdown": "##onshutdown##",
          "onclick": "##onclick##",
          "onmouseenter": "##onmouseenter##",
          "onmouseleave": "##onmouseleave##",
          "onkeypress": "##onkeypress##",
          "onkeypress_enter": "##onkeypress_enter##",
          "characterOverride": "##characterOverride##",
          "useMarkdown": "##useMarkdown##",
          "allowNewLines": "##allowNewLines##",
          "controls": [
            {
              "type": "texture",
              "id": "cursor",
              "x": 10,
              "y": 10,
              "w": 10,
              "h": 10,
              "texturePath": "##cursorTexturePath##",
              "textureIndex": 1
            }
          ]
        }
      ]
    }
  ]
}
