{
  "onload": "{ClientUI}/world_screen/WorldScreen.js",
  "controls": [
    {
      "id": "sceneUI",
      "type": "canvas",
      "x": 0,
      "y": 0,
      "w": 100,
      "h": 100,
      "controls": [
        {
          "type": "custom",
          "name": "button",
          "id": "buttonMenu",
          "x": 85,
          "y": 5,
          "w": 10,
          "h": 5,
          "text": "Menu",
          "font": "small_text",
          "color": "black",
          "texturePath": "{ClientUI}/ui_textures/button.png",
          "onload": "{ClientUI}/world_screen/buttonMenu.js"
        },
        {
          "type": "custom",
          "name": "chatbox",
          "id": "chat",
          "x": 10,
          "y": 70,
          "w": 80,
          "h": 25,
          "font": "chatbox_text",
          "color": "black"
        }
      ]
    },
    {
      "id": "menu",
      "type": "texture",
      "x": 0,
      "y": 0,
      "w": 100,
      "h": 100,
      "color": "#FFFFFF88",
      "texturePath": "{ClientUI}/world_screen/MenuBackground.png",
      "isVisible": "false",
      "controls": [
        {
          "id": "mainMenuUI",
          "type": "texture",
          "x": 0,
          "y": 0,
          "w": 100,
          "h": 100,
          "color": "transparent",
          "texturePath": "{ClientUI}/world_screen/MenuBackground.png",
          "isVisible": "true",
          "controls": [
            {
              "type": "label",
              "x": 25,
              "y": 10,
              "w": 50,
              "h": 10,
              "text": "Menu",
              "font": "text",
              "color": "black"
            },
            {
              "type": "custom",
              "name": "button",
              "id": "buttonShowDebugUI",
              "x": 25,
              "y": 20,
              "w": 40,
              "h": 5,
              "text": "Show Debug UI",
              "font": "small_text",
              "color": "black",
              "texturePath": "{ClientUI}/ui_textures/button.png",
              "onload": "{ClientUI}/world_screen/buttonShowDebugUI.js"
            },
            {
              "type": "custom",
              "name": "button",
              "id": "buttonShowGraphicsUI",
              "x": 25,
              "y": 30,
              "w": 40,
              "h": 5,
              "text": "Graphics",
              "font": "small_text",
              "color": "black",
              "texturePath": "{ClientUI}/ui_textures/button.png",
              "onload": "{ClientUI}/world_screen/buttonShowGraphicsUI.js"
            },
            {
              "type": "custom",
              "name": "button",
              "id": "buttonExitGame",
              "x": 25,
              "y": 40,
              "w": 40,
              "h": 5,
              "text": "Exit Game",
              "font": "small_text",
              "color": "black",
              "texturePath": "{ClientUI}/ui_textures/button.png",
              "onload": "{ClientUI}/world_screen/buttonExitGame.js"
            },
            {
              "type": "custom",
              "name": "button",
              "id": "buttonCloseMenu",
              "x": 10,
              "y": 90,
              "w": 10,
              "h": 5,
              "text": "Close",
              "font": "small_text",
              "color": "black",
              "texturePath": "{ClientUI}/ui_textures/button.png",
              "onload": "{ClientUI}/world_screen/buttonCloseMenu.js"
            }
          ]
        },
        {
          "id": "graphicsUI",
          "type": "texture",
          "x": 0,
          "y": 0,
          "w": 100,
          "h": 100,
          "color": "transparent",
          "texturePath": "{ClientUI}/world_screen/MenuBackground.png",
          "isVisible": "false",
          "controls": [
            {
              "type": "label",
              "x": 25,
              "y": 10,
              "w": 50,
              "h": 10,
              "text": "Graphics",
              "font": "text",
              "color": "black"
            },
            {
              "type": "label",
              "x": 25,
              "y": 20,
              "w": 50,
              "h": 10,
              "text": "Resolutions",
              "font": "text",
              "color": "black"
            },
            {
              "type": "custom",
              "name": "button",
              "x": 25,
              "y": 30,
              "w": 40,
              "h": 5,
              "text": "800x600",
              "font": "small_text",
              "color": "black",
              "texturePath": "{ClientUI}/ui_textures/button.png",
              "onclick": "get_scene().send_message(\"set_screen_resolution\", 800, 600, false)"
            },
            {
              "type": "custom",
              "name": "button",
              "x": 25,
              "y": 40,
              "w": 40,
              "h": 5,
              "text": "1024x768",
              "font": "small_text",
              "color": "black",
              "texturePath": "{ClientUI}/ui_textures/button.png",
              "onclick": "get_scene().send_message(\"set_screen_resolution\", 1024, 768, false)"
            },
            {
              "type": "custom",
              "name": "button",
              "id": "buttonCloseGraphicsUI",
              "x": 10,
              "y": 90,
              "w": 10,
              "h": 5,
              "text": "Back",
              "font": "small_text",
              "color": "black",
              "texturePath": "{ClientUI}/ui_textures/button.png",
              "onload": "{ClientUI}/world_screen/buttonCloseGraphicsUI.js"
            }
          ]
        }
      ]
    },
    {
      "id": "debugUI",
      "type": "canvas",
      "x": 0,
      "y": 0,
      "w": 100,
      "h": 100,
      "isVisible": "false",
      "canFocus": "false",
      "controls": [
        {
          "type": "texture",
          "x": 3,
          "y": 3,
          "w": 40,
          "h": 50,
          "color": "#22222222",
          "controls": [
            {
              "id": "labelDebugInfo",
              "type": "label",
              "x": 0,
              "y": 0,
              "w": 100,
              "h": 100,
              "text": "$$debug_info$$",
              "font": "text",
              "color": "#00AA00AA"
            }
          ]
        }
      ]
    },
    {
      "type": "mouseCursor",
      "id": "mouseCursor",
      "x": 50,
      "y": 50,
      "w": 5,
      "h": 5
    }
  ]
}
